cd $PBS_O_WORKDIR
pwd
date

@ i = 1 

if (-e CONTCAR) then

    while (-e out$i)
        @ i = $i + 1 
        echo $i
    end

    mkdir out$i

    echo "Old CONTCAR found. Moving files into "out$i

    set files = (`find . -not -name "*run.scr" -not -name "Poten*.dat" -maxdepth 1 -and -not -type d`)
    mv $files out$i

    cp out${i}/{KPOINTS,POTCAR,REFCAR,log01,TRAJECTORYn1} .
#    cp out${i}/Poten*.dat .
    cp out${i}/CONTCAR POSCAR

    cp out${i}/INCAR . #use initial INCAR file and decrement steps
#    ~/scripts/decsteps

endif


mpiexec /home/swahl/bin/vasp_spline > out

date
exit 0
